{
    "name": "snipnote-e2e",
    "version": "0.1.0",
    "description": "Playwright end-to-end tests for Snipnote",
    "private": true,
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "tailwind:build": "tailwindcss -i ./tailwind/app.css -o ./assets/styles/dist/tailwind.css --minify",
        "tailwind:watch": "tailwindcss -i ./tailwind/app.css -o ./assets/styles/dist/tailwind.css --watch",
        "js:minify": "esbuild assets/*.js assets/controllers/*.js --outdir=assets --outbase=assets --format=esm --minify --target=es2020 --keep-names --allow-overwrite",
        "e2e": "playwright test",
        "e2e:headed": "HEADLESS=false playwright test",
        "e2e:ui": "playwright test --ui",
        "e2e:codegen": "playwright codegen $E2E_BASE_URL",
        "e2e:install:browsers": "playwright install chromium",
        "e2e:report": "playwright show-report"
    },
    "devDependencies": {
        "@playwright/test": "^1.48.2",
        "@types/node": "^22.8.5",
        "autoprefixer": "^10.4.20",
        "esbuild": "^0.24.0",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.14",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    }
}