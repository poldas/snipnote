APP_ENV=test
APP_DEBUG=1
APP_SECRET=test-app-secret

# Database connection used by PHPUnit (Doctrine suffix will append "_test")
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=app
DATABASE_URL="postgresql://app:app@database:5432/app?serverVersion=16&charset=utf8"

# JWT secret for HS256 signing in tests
JWT_SECRET=test-jwt-secret

# Disable outbound email in tests
MAILER_DSN=null://null

# Refresh token TTL for tests (seconds)
REFRESH_TOKEN_TTL_SECONDS=1200

# Messenger transport for tests (keeps queue in-memory)
MESSENGER_TRANSPORT_DSN=in-memory://

# Default base URI for CLI URL generation in tests
DEFAULT_URI=http://localhost:8080

# VarDumper server target (not used in tests, but keeps env complete)
VAR_DUMPER_SERVER=127.0.0.1:9912

# Sender email for outbound messages (logged in tests)
MAILER_FROM=no-reply@test.local

# Secret used to sign verification links
VERIFY_EMAIL_SECRET=test-verify-email-secret

