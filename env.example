APP_ENV=dev
APP_DEBUG=1
APP_SECRET=dev-app-secret

# Database connection for Docker Compose (PostgreSQL 16)
# For host-run tests replace "database" with "localhost".
# Base credentials used by Docker Compose postgres service
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=app
DATABASE_URL="postgresql://app:app@database:5432/app?serverVersion=16&charset=utf8"

# JWT secret for HS256 signing
JWT_SECRET=dev-jwt-secret

# Outgoing mail during development (Mailpit exposed on 1025/8025)
MAILER_DSN=smtp://mailer:1025

# Refresh token TTL (seconds)
REFRESH_TOKEN_TTL_SECONDS=1200

# Messenger transport (async queue)
# Use Doctrine-backed queue in dev; adjust as needed for prod.
MESSENGER_TRANSPORT_DSN=doctrine://default

# Default base URI for CLI URL generation
DEFAULT_URI=http://localhost:8080

# Proxy settings (dev/local: no proxy; keep loopback/REMOTE_ADDR for safety)
TRUSTED_PROXIES=127.0.0.1,REMOTE_ADDR

# VarDumper server target (dev only)
VAR_DUMPER_SERVER=127.0.0.1:9912

# Sender email for outbound messages
MAILER_FROM=no-reply@snipnote.local

# Secret used to sign verification links
VERIFY_EMAIL_SECRET=dev-verify-email-secret

