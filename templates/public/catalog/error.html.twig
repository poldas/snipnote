{% extends 'layout_public.html.twig' %}

{% block title %}Katalog niedostępny | Snipnote{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .animated-bg {
            background: linear-gradient(-45deg, #eef2ff, #f5f3ff, #ecfeff, #fdf4ff);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
        }
        .glass {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
        }
        .pn-error {
            position: relative;
            overflow: hidden;
            border-radius: 28px;
            border: 1px solid rgba(226, 232, 240, 0.9);
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 24px 60px rgba(15, 23, 42, 0.12);
            padding: 28px;
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
        }
    </style>
{% endblock %}

{% block body %}
<div class="animated-bg min-h-screen text-slate-700 font-sans flex flex-col">
    <!-- Top Navigation -->
    <nav class="sticky top-0 z-50 glass border-b border-indigo-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                {% include 'components/logo.html.twig' %}
                <div class="flex items-center gap-4">
                    {% if app.user %}
                        <a href="{{ path('notes_dashboard') }}" class="text-indigo-700 hover:text-indigo-900 font-medium">Dashboard</a>
                    {% else %}
                        <a href="{{ path('app_login_page') }}" class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-5 py-2 rounded-full font-medium shadow-md hover:shadow-xl hover:-translate-y-1 transition-all">Zaloguj się</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow flex items-center justify-center px-4 py-20">
        <div class="w-full max-w-4xl">
            <div class="pn-error glass">
                {% include 'components/empty_state.html.twig' with {
                    title: 'note.catalog.empty_title'|trans,
                    description: 'note.catalog.empty_description'|trans
                } %}
            </div>
        </div>
    </main>

    <footer class="py-10 border-t border-indigo-100 glass">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <p class="text-slate-500 text-sm">Powered by <span class="font-bold text-indigo-600">Snipnote</span> &copy; 2026</p>
        </div>
    </footer>
</div>
{% endblock %}
