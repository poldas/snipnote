{% set variant = variant ?? 'error' %}
{% set title = title ?? 'Błąd' %}
{% set messages = messages ?? [] %}
{% set icon = icon ?? null %}

{% if messages %}
    <div class="bg-{{ variant == 'error' ? 'red' : variant == 'success' ? 'green' : 'blue' }}-50 border border-{{ variant == 'error' ? 'red' : variant == 'success' ? 'green' : 'blue' }}-200 rounded-xl p-4">
        <div class="flex items-center gap-2 text-{{ variant == 'error' ? 'red' : variant == 'success' ? 'green' : 'blue' }}-700 font-medium">
            {% if icon %}
                {{ icon|raw }}
            {% else %}
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    {% if variant == 'success' %}
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    {% else %}
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    {% endif %}
                </svg>
            {% endif %}
            <span>{{ title }}</span>
        </div>
        {% for message in messages %}
            <p class="text-{{ variant == 'error' ? 'red' : variant == 'success' ? 'green' : 'blue' }}-600 text-sm mt-2">{{ message }}</p>
        {% endfor %}
    </div>
{% endif %}
