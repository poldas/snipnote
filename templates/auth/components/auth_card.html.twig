{% set cardTitle = title ?? 'Formularz' %}
{% set subtitle = subtitle ?? null %}
{% set tag = tag ?? null %}
{% set pending = pending ?? false %}

<div class="glass-surface rounded-2xl p-8 border border-slate-200 text-slate-900">
    <div class="flex items-start justify-between gap-3 mb-4">
        <div class="space-y-1">
            <h2 class="text-xl font-semibold text-slate-900">{{ cardTitle }}</h2>
            {% if subtitle %}
                <p class="text-sm text-slate-600">{{ subtitle }}</p>
            {% endif %}
        </div>
        {% if tag %}
            <span class="text-[11px] text-indigo-700 border border-indigo-200 bg-indigo-50 rounded-full px-3 py-1 whitespace-nowrap">{{ tag }}</span>
        {% endif %}
    </div>

    <div class="{{ pending ? 'opacity-70 pointer-events-none select-none' : '' }}">
        {{ block('auth_card_body') }}
    </div>
</div>

