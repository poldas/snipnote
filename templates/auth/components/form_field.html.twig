{% set label = label ?? '' %}
{% set type = type ?? 'text' %}
{% set name = name ?? '' %}
{% set id = id ?? name %}
{% set value = value ?? '' %}
{% set placeholder = placeholder ?? '' %}
{% set required = required ?? false %}
{% set error = error ?? null %}
{% set autoFocus = autoFocus ?? false %}
{% set minLength = minLength ?? null %}
{% set maxLength = maxLength ?? null %}

<div>
    <label for="{{ id }}" class="block text-sm font-medium text-slate-700 mb-2">{{ label }}</label>
    <input
        type="{{ type }}"
        id="{{ id }}"
        name="{{ name }}"
        value="{{ value }}"
        {% if required %}required{% endif %}
        {% if autoFocus %}autofocus{% endif %}
        {% if minLength %}minlength="{{ minLength }}"{% endif %}
        {% if maxLength %}maxlength="{{ maxLength }}"{% endif %}
        class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 focus:outline-none transition-colors"
        placeholder="{{ placeholder }}"
    />
    {% if error %}
        <p class="text-red-600 text-sm mt-1">{{ error }}</p>
    {% endif %}
</div>