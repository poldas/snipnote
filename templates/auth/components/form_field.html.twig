{% set label = label ?? config.label ?? '' %}
{% set type = type ?? config.type ?? 'text' %}
{% set name = name ?? config.name ?? '' %}
{% set id = id ?? config.id ?? name %}
{% set value = value ?? config.value ?? '' %}
{% set placeholder = placeholder ?? config.placeholder ?? '' %}
{% set required = required ?? config.required ?? false %}
{% set error = error ?? config.error ?? null %}
{% set autoFocus = autoFocus ?? config.autoFocus ?? false %}
{% set minLength = minLength ?? config.minLength ?? null %}
{% set maxLength = maxLength ?? config.maxLength ?? null %}

<div>
    <label for="{{ id }}" class="block text-sm font-medium text-slate-700 mb-1 sm:mb-2">{{ label }}</label>
    <input
        type="{{ type }}"
        id="{{ id }}"
        name="{{ name }}"
        value="{{ value }}"
        {% if required %}required{% endif %}
        {% if autoFocus %}autofocus{% endif %}
        {% if minLength %}minlength="{{ minLength }}"{% endif %}
        {% if maxLength %}maxlength="{{ maxLength }}"{% endif %}
        class="w-full px-4 py-2.5 sm:py-3 border border-slate-300 rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 focus:outline-none transition-colors text-sm sm:text-base"
        placeholder="{{ placeholder }}"
    />
    {% if error %}
        <p class="text-red-600 text-sm mt-1">{{ error }}</p>
    {% endif %}
</div>