{% set action = action ?? '/forgot-password' %}
{% set csrfToken = csrfToken ?? csrf_token('forgot_password') %}
{% set errors = errors ?? [] %}
{% set prefill = prefill ?? {} %}
{% set pending = pending ?? false %}
{% set success = success ?? null %}

{% set emailError = (errors|filter(e => (e.field ?? null) == 'email')|first).message ?? null %}
{% set globalErrors = errors|filter(e => e.field is not defined or e.field is null)|map(e => e.message) %}

<form action="{{ action }}" method="post" class="space-y-4" hx-boost="false" data-turbo="false">
    <input type="hidden" name="_csrf_token" value="{{ csrfToken }}">

    {% include 'auth/components/global_error_banner.html.twig' with { messages: globalErrors } %}

    {% if success %}
        <div class="rounded-xl border border-emerald-200 bg-emerald-50 text-emerald-900 px-4 py-3" role="status">
            <p class="text-sm font-semibold">{{ success }}</p>
            <p class="text-xs text-emerald-800/80 mt-1">Jeśli konto istnieje, wiadomość pojawi się w kilka minut.</p>
        </div>
    {% endif %}

    {% include 'auth/components/form_field.html.twig' with {
        config: {
            id: 'forgot-email',
            name: 'email',
            label: 'Email',
            type: 'email',
            placeholder: 'you@example.com',
            autocomplete: 'email',
            required: true,
            pattern: '[^@\\s]+@[^@\\s]+\\.[^@\\s]+',
            maxLength: 180
        },
        value: prefill.email ?? '',
        error: emailError,
        autoFocus: true
    } %}

    <button type="submit"
            class="w-full inline-flex items-center justify-center rounded-xl bg-indigo-500 text-white px-4 py-2.75 font-semibold shadow-md shadow-indigo-500/15 hover:bg-indigo-450 transition-colors disabled:opacity-70 disabled:cursor-not-allowed"
            {% if pending %}disabled{% endif %}
            hx-disabled-elt="this">
        {% if pending %}
            <span class="mr-2 h-4 w-4 animate-spin rounded-full border-2 border-white/60 border-t-transparent"></span>
        {% endif %}
        Wyślij instrukcje resetu
    </button>

    <p class="text-sm text-slate-700 text-center">
        Pamiętasz hasło?
        <a href="/login" class="text-indigo-600 hover:text-indigo-800 font-semibold underline underline-offset-4 focus-visible:outline focus-visible:outline-2 focus-visible:outline-indigo-300 transition-colors">Zaloguj się</a>
    </p>
</form>


