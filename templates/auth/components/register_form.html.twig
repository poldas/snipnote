{% set action = action ?? '/register' %}
{% set csrfToken = csrfToken ?? csrf_token('register') %}
{% set errors = errors ?? [] %}
{% set prefill = prefill ?? {} %}
{% set pending = pending ?? false %}

{% set emailError = (errors|filter(e => (e.field ?? null) == 'email')|first).message ?? null %}
{% set passwordError = (errors|filter(e => (e.field ?? null) == 'password')|first).message ?? null %}
{% set passwordConfirmError = (errors|filter(e => (e.field ?? null) == 'passwordConfirm')|first).message ?? null %}
{% set globalErrors = errors|filter(e => e.field is not defined or e.field is null)|map(e => e.message) %}

<form action="{{ action }}" method="post" novalidate class="space-y-4" hx-boost="false">
    <input type="hidden" name="_csrf_token" value="{{ csrfToken }}">

    {% include 'auth/components/global_error_banner.html.twig' with { messages: globalErrors } %}

    {% include 'auth/components/form_field.html.twig' with {
        config: {
            id: 'reg-email',
            name: 'email',
            label: 'Email',
            type: 'email',
            placeholder: 'you@example.com',
            autocomplete: 'email',
            required: true,
            pattern: '[^@\\s]+@[^@\\s]+\\.[^@\\s]+'
        },
        value: prefill.email ?? '',
        error: emailError,
        autoFocus: true
    } %}

    {% include 'auth/components/form_field.html.twig' with {
        config: {
            id: 'reg-password',
            name: 'password',
            label: 'Hasło',
            type: 'password',
            placeholder: 'Minimum 8 znaków',
            autocomplete: 'new-password',
            required: true,
            minLength: 8
        },
        error: passwordError
    } %}

    {% include 'auth/components/form_field.html.twig' with {
        config: {
            id: 'reg-password-confirm',
            name: 'passwordConfirm',
            label: 'Potwierdź hasło',
            type: 'password',
            placeholder: 'Powtórz hasło',
            autocomplete: 'new-password',
            required: true,
            minLength: 8
        },
        error: passwordConfirmError
    } %}

    <button type="submit"
            class="w-full inline-flex items-center justify-center rounded-xl bg-indigo-500 text-white px-4 py-2.75 font-semibold shadow-md shadow-indigo-500/15 hover:bg-indigo-450 transition-colors disabled:opacity-70 disabled:cursor-not-allowed"
            {% if pending %}disabled{% endif %}
            hx-disabled-elt="this">
        {% if pending %}
            <span class="mr-2 h-4 w-4 animate-spin rounded-full border-2 border-white/60 border-t-transparent"></span>
        {% endif %}
        Utwórz konto
    </button>

    <p class="text-sm text-slate-300 text-center">
        Masz już konto?
        <a href="/login" class="text-indigo-200 hover:text-white font-semibold">Zaloguj się</a>
    </p>
</form>

