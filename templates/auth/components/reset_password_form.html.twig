{% set action = action ?? '/reset-password' %}
{% set csrfToken = csrfToken ?? csrf_token('reset_password') %}
{% set errors = errors ?? [] %}
{% set pending = pending ?? false %}
{% set token = token ?? null %}

{% set passwordError = (errors|filter(e => (e.field ?? null) == 'password')|first).message ?? null %}
{% set passwordConfirmError = (errors|filter(e => (e.field ?? null) == 'passwordConfirm')|first).message ?? null %}
{% set globalErrors = errors|filter(e => e.field is not defined or e.field is null)|map(e => e.message) %}

<form action="{{ action }}" method="post" class="space-y-4" data-turbo="false">
    <input type="hidden" name="_csrf_token" value="{{ csrfToken }}">
    {% if token %}
        <input type="hidden" name="token" value="{{ token }}">
    {% endif %}

    {% include 'components/alert.html.twig' with { messages: globalErrors } %}

    {% include 'auth/components/form_field.html.twig' with {
        config: {
            id: 'reset-password',
            name: 'password',
            label: 'Nowe hasło',
            type: 'password',
            placeholder: 'Minimum 8 znaków',
            autocomplete: 'new-password',
            required: true,
            minLength: 8,
            maxLength: 4096
        },
        error: passwordError,
        autoFocus: true
    } %}

    {% include 'auth/components/form_field.html.twig' with {
        config: {
            id: 'reset-password-confirm',
            name: 'passwordConfirm',
            label: 'Potwierdź hasło',
            type: 'password',
            placeholder: 'Powtórz hasło',
            autocomplete: 'new-password',
            required: true,
            minLength: 8,
            maxLength: 4096
        },
        error: passwordConfirmError
    } %}

    <button type="submit"
            class="w-full inline-flex items-center justify-center rounded-2xl text-white px-4 py-3 font-semibold shadow-lg shadow-indigo-500/25 transition-all disabled:opacity-70 disabled:cursor-not-allowed focus:outline-none focus:ring-2 focus:ring-[#c7d2fe] focus:ring-offset-2 focus:ring-offset-white hover:translate-y-[-1px] active:translate-y-0.5 btn-auth-primary"
            {% if pending %}disabled{% endif %}>
        {% if pending %}
            <span class="mr-2 h-4 w-4 animate-spin rounded-full border-2 border-white/60 border-t-transparent"></span>
        {% endif %}
        Ustaw nowe hasło
    </button>

    <p class="text-sm text-slate-700 text-center">
        Pamiętasz hasło?
        <a href="/login" class="text-indigo-600 hover:text-indigo-800 font-semibold underline underline-offset-4 focus-visible:outline focus-visible:outline-2 focus-visible:outline-indigo-300 transition-colors">Zaloguj się</a>
    </p>
</form>


