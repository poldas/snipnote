{% extends 'auth/auth_layout.html.twig' %}

{% block title %}Ustaw nowe hasło | Snipnote{% endblock %}

{% block auth_hero %}
    <div class="space-y-4">
        <h1 class="text-3xl lg:text-4xl font-bold text-indigo-950">Ustaw nowe hasło</h1>
        <p class="text-lg lg:text-xl text-slate-600">Podaj nowe hasło i zapisz zmiany, aby odzyskać dostęp do konta.</p>
    </div>
{% endblock %}

{% block auth_hero_mobile %}
    <div class="space-y-2">
        <h1 class="text-2xl font-bold text-indigo-950">Nowe hasło</h1>
        <p class="text-sm text-slate-600">Zabezpiecz swoje konto.</p>
    </div>
{% endblock %}

{% block auth_content %}
    <div class="bg-white/90 backdrop-blur-lg rounded-2xl sm:rounded-3xl shadow-2xl border border-slate-200/50 p-6 sm:p-8 transform hover:scale-[1.01] transition-all">
        {% set errors = errors ?? [] %}
        {% set pending = pending ?? false %}
        {% set token = token ?? null %}

        {% include 'auth/components/reset_password_form.html.twig' with {
            action: action ?? '/reset-password',
            errors: errors,
            pending: pending,
            token: token
        } %}
    </div>
{% endblock %}


