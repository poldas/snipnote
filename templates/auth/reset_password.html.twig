{% extends 'auth/base_auth.html.twig' %}

{% block title %}Ustaw nowe hasło | Snipnote{% endblock %}

{% block auth_nav %}
    {% include 'auth/components/nav_links_auth.html.twig' with { nav: navSwitch ?? { href: '/login', label: 'Wróć do logowania' } } %}
{% endblock %}

{% block auth_hero %}
    {% include 'auth/components/hero_intro.html.twig' with {
        hero: hero ?? {
            headline: 'Ustaw nowe hasło',
            subcopy: 'Skorzystaj z linku z maila, aby odzyskać dostęp do konta.'
        },
        showCtas: false
    } %}
{% endblock %}

{% block auth_card %}
    {% set errors = errors ?? [] %}
    {% set pending = pending ?? false %}
    {% set token = token ?? null %}

    {% embed 'auth/components/auth_card.html.twig' with {
        title: 'Reset hasła',
        subtitle: 'Podaj nowe hasło i zapisz zmiany.',
        pending: pending
    } %}
        {% block auth_card_body %}
            {% include 'auth/components/reset_password_form.html.twig' with {
                action: action ?? '/reset-password',
                errors: errors,
                pending: pending,
                token: token
            } %}
        {% endblock %}
    {% endembed %}
{% endblock %}


