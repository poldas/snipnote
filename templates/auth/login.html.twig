{% extends 'auth/auth_layout.html.twig' %}

{% block title %}Zaloguj się | Snipnote{% endblock %}

{% block auth_hero %}
    <div class="space-y-4">
        <h1 class="text-3xl lg:text-4xl font-bold text-indigo-950">Wróć do swoich notatek</h1>
        <p class="text-lg lg:text-xl text-slate-600">Zaloguj się, aby zarządzać notatkami i współpracować z zespołem.</p>
        {% if redirect %}
            <p class="text-sm text-indigo-600 bg-indigo-50 px-4 py-2 rounded-lg inline-block">
                Po zalogowaniu wrócisz do docelowej strony
            </p>
        {% endif %}
    </div>
{% endblock %}

{% block auth_hero_mobile %}
    <div class="space-y-2">
        <h1 class="text-2xl font-bold text-indigo-950">Zaloguj się</h1>
        <p class="text-sm text-slate-600">Witaj ponownie w Snipnote.</p>
    </div>
{% endblock %}

{% block auth_content %}
    <div class="bg-white/90 backdrop-blur-lg rounded-2xl sm:rounded-3xl shadow-2xl border border-slate-200/50 p-6 sm:p-8 transform hover:scale-[1.01] transition-all">
        {% include 'auth/components/login_form.html.twig' with {
            errors: errors ?? [],
            prefill: prefill ?? {},
            pending: pending ?? false,
            redirect: redirect ?? null
        } %}
    </div>
{% endblock %}