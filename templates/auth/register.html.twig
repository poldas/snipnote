{% extends 'auth/auth_layout.html.twig' %}

{% block title %}Zarejestruj się | Snipnote{% endblock %}

{% block auth_hero %}
    <div class="space-y-4">
        <h1 class="text-3xl lg:text-4xl font-bold text-indigo-950">Załóż konto w Snipnote</h1>
        <p class="text-lg lg:text-xl text-slate-600">Twórz notatki, zapraszaj współpracowników i dziel się publicznie.</p>
    </div>
{% endblock %}

{% block auth_hero_mobile %}
    <div class="space-y-2">
        <h1 class="text-2xl font-bold text-indigo-950">Załóż konto</h1>
        <p class="text-sm text-slate-600">Dołącz do społeczności Snipnote.</p>
    </div>
{% endblock %}

{% block auth_content %}
    <div class="bg-white/90 backdrop-blur-lg rounded-2xl sm:rounded-3xl shadow-2xl border border-slate-200/50 p-6 sm:p-8 transform hover:scale-[1.01] transition-all">
        {% include 'auth/components/register_form.html.twig' with {
            errors: errors ?? [],
            prefill: prefill ?? {},
            pending: pending ?? false
        } %}
    </div>
{% endblock %}