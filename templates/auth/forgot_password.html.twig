{% extends 'auth/auth_layout.html.twig' %}

{% block title %}Odzyskaj konto | Snipnote{% endblock %}

{% block auth_hero %}
    <div class="space-y-4">
        <h1 class="text-3xl lg:text-4xl font-bold text-indigo-950">Odzyskaj dostęp do konta</h1>
        <p class="text-lg lg:text-xl text-slate-600">Podaj email, a wyślemy instrukcje resetu hasła.</p>
    </div>
{% endblock %}

{% block auth_hero_mobile %}
    <div class="space-y-2">
        <h1 class="text-2xl font-bold text-indigo-950">Odzyskaj konto</h1>
        <p class="text-sm text-slate-600">Podaj swój adres e-mail.</p>
    </div>
{% endblock %}

{% block auth_content %}
    <div class="bg-white/90 backdrop-blur-lg rounded-2xl sm:rounded-3xl shadow-2xl border border-slate-200/50 p-6 sm:p-8">
        {% set errors = errors ?? [] %}
        {% set prefill = prefill ?? {} %}
        {% set pending = pending ?? false %}
        {% set success = success ?? null %}

        {% include 'auth/components/forgot_password_form.html.twig' with {
            errors: errors,
            prefill: prefill,
            pending: pending,
            success: success
        } %}
    </div>
{% endblock %}


