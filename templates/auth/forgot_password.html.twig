{% extends 'auth/base_auth.html.twig' %}

{% block title %}Odzyskaj konto | Snipnote{% endblock %}

{% block auth_nav %}
    {% include 'auth/components/nav_links_auth.html.twig' with { nav: navSwitch ?? { href: '/login', label: 'Wróć do logowania' } } %}
{% endblock %}

{% block auth_hero %}
    {% include 'auth/components/hero_intro.html.twig' with {
        hero: hero ?? {
            headline: 'Odzyskaj dostęp do konta',
            subcopy: 'Podaj email, a wyślemy instrukcje resetu hasła.',
            ctaSecondary: { href: '/register', label: 'Nie masz konta? Zarejestruj się' }
        },
        showCtas: false
    } %}
{% endblock %}

{% block auth_card %}
    {% set errors = errors ?? [] %}
    {% set prefill = prefill ?? {} %}
    {% set pending = pending ?? false %}
    {% set success = success ?? null %}

    {% embed 'auth/components/auth_card.html.twig' with {
        title: 'Zapomniane hasło',
        subtitle: 'Wyślemy link resetu hasła na podany adres.',
        pending: pending
    } %}
        {% block auth_card_body %}
            {% include 'auth/components/forgot_password_form.html.twig' with {
                action: action ?? '/forgot-password',
                errors: errors,
                prefill: prefill,
                pending: pending,
                success: success
            } %}
        {% endblock %}
    {% endembed %}
{% endblock %}


