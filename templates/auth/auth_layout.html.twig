{% extends 'layout_minimal.html.twig' %}

{% block title %}{{ title ?? 'Snipnote' }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/dist/auth.css') }}">
{% endblock %}

{% block javascripts %}
    {{ importmap('auth') }}
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-cyan-50 flex flex-col relative">
        <!-- Navigation -->
        {% include 'auth/components/auth_nav.html.twig' with {isFixed: true} %}

        <!-- Main Content -->
        <main class="flex-1 flex items-center justify-center p-4 sm:p-6 lg:p-8 lg:mt-12">
            <div class="w-full max-w-6xl mx-auto">
                <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
                    <div class="space-y-6 text-center lg:text-left hidden lg:block">
                        {% block auth_hero %}{% endblock %}
                    </div>
                    
                    {# Mobile Hero (Visible only on small screens, more compact) #}
                    <div class="lg:hidden text-center mb-6">
                        {% block auth_hero_mobile %}
                            {# Default to showing same as hero but can be overridden #}
                            {{ block('auth_hero') }}
                        {% endblock %}
                    </div>

                    <div class="w-full max-w-md mx-auto lg:max-w-none">
                        {# Flash messages #}
                        {% for label, messages in app.flashes %}
                            {% include 'components/alert.html.twig' with {
                                type: label == 'success' ? 'success' : (label == 'error' ? 'error' : 'info'),
                                messages: messages,
                                class: 'mb-6'
                            } %}
                        {% endfor %}

                        {% block auth_content %}{% endblock %}
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
