{% extends 'base.html.twig' %}

{% block title %}{{ title ?? 'Snipnote' }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-cyan-50 flex items-center justify-center p-4 sm:p-6">
        <!-- Navigation -->
        <nav class="fixed top-0 left-0 right-0 z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between py-4 sm:py-6">
            {% include 'components/logo.html.twig' %}
            <div class="flex items-center gap-2 sm:gap-4">
                <a href="/login" class="text-xs sm:text-sm font-semibold text-indigo-700 hover:text-indigo-900 transition-colors">
                    Zaloguj się
                </a>
                <a href="/register" class="px-3 py-1.5 sm:px-6 sm:py-2.5 btn-auth-primary rounded-lg sm:rounded-xl text-xs sm:text-sm font-semibold shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all">
                    Załóż konto
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="w-full max-w-sm sm:max-w-md mx-auto mt-16 sm:mt-20">
            {% block auth_content %}{% endblock %}
        </div>
    </div>
{% endblock %}
