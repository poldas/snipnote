{% extends 'layout_auth.html.twig' %}

{% block title %}Snipnote - Twórz i udostępniaj notatki{% endblock %}

{% block body %}
    <div class="flex-1">
        <!-- Navigation -->
        {% include 'auth/components/auth_nav.html.twig' %}

        <!-- Hero -->
        <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-24">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div class="space-y-6 sm:space-y-8">
                    <div class="text-center lg:text-left">
                        <span class="px-4 py-1.5 bg-indigo-100 text-indigo-700 rounded-full text-xs sm:text-sm font-semibold">
                            Szybkie notatki dla każdego
                        </span>
                    </div>
                    <h1 class="text-3xl sm:text-6xl lg:text-7xl font-bold text-indigo-950 leading-tight text-center lg:text-left">
                        Notuj.<br class="hidden sm:block" />
                        <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
                            Udostępniaj.
                        </span><br class="hidden sm:block" />
                        Współpracuj.
                    </h1>
                    <p class="text-lg sm:text-xl text-slate-700 max-w-xl mx-auto lg:mx-0 leading-relaxed fade-up-soft text-center lg:text-left">
                        Szybkie, bezpieczne i przejrzyste notatki, które łatwo udostępnisz innym.
                        Idealne do zespołów, projektów i codziennej pracy.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 pt-4">
                        <a href="/register" class="px-8 py-4 btn-auth-primary rounded-2xl font-bold text-base sm:text-lg shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all text-center">
                            Rozpocznij za darmo
                        </a>
                        <a href="#features" class="relative inline-flex items-center justify-center px-8 py-4 bg-white/80 backdrop-blur-sm border-2 border-indigo-200 text-indigo-900 rounded-2xl font-bold text-base sm:text-lg hover:bg-white text-center group transition-all duration-300 hover:scale-105">
                            <div class="absolute bg-gradient-to-r from-indigo-400 to-purple-400 rounded-2xl blur-lg opacity-0 group-hover:opacity-40 transition-opacity duration-300 -z-10"></div>
                            <span class="relative">Zobacz możliwości</span>
                        </a>
                    </div>
                    <div class="flex flex-wrap justify-center lg:justify-start gap-4 sm:gap-8 pt-8 text-xs sm:text-sm text-slate-600">
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 rounded-full bg-indigo-200"></div>
                            <span>Anonimowe notatki</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 rounded-full bg-indigo-200"></div>
                            <span>Łatwe udostępnianie</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 rounded-full bg-indigo-200"></div>
                            <span>Współpraca</span>
                        </div>
                    </div>
                </div>

                <!-- Login Form -->
                <div class="relative mt-8 lg:mt-0 transform hover:scale-[1.01] transition-all">
                    <div class="absolute inset-0 bg-gradient-to-br from-indigo-400/20 to-purple-400/20 rounded-3xl blur-3xl"></div>
                    <div class="relative bg-white/90 backdrop-blur-lg rounded-3xl shadow-2xl border border-slate-200/50 p-6 sm:p-8">
                        <div class="space-y-6">
                            <div class="text-center">
                                <h3 class="text-xl sm:text-2xl font-bold text-indigo-900 mb-2">Zaloguj się do Snipnote</h3>
                                <p class="text-sm sm:text-base text-slate-600">Wróć do swoich notatek i kontynuuj pracę</p>
                            </div>

                            {% include 'auth/components/login_form.html.twig' with {
                                errors: errors ?? [],
                                prefill: prefill ?? {},
                                pending: pending ?? false,
                                showRegisterLink: false
                            } %}
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features -->
        <section id="features" class="py-12 sm:py-24 relative">
            <div class="absolute inset-0 bg-white/40 backdrop-blur-sm"></div>
            <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12 sm:mb-16 space-y-4">
                    <h2 class="text-3xl sm:text-5xl font-bold text-indigo-950">
                        Wszystko, czego potrzebujesz
                    </h2>
                    <p class="text-lg sm:text-xl text-slate-600 max-w-2xl mx-auto">
                        Snipnote to kompletne rozwiązanie do zarządzania notatkami
                    </p>
                </div>

                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">

                    <!-- Feature 1 -->
                    <div data-testid="feature-card-5" class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-slate-200/50 hover:border-indigo-200 hover:shadow-xl transition-all">
                        <div class="flex items-center gap-4 mb-4 sm:block">
                            <div class="w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-purple-400 to-pink-500 rounded-xl flex items-center justify-center sm:mb-6 shadow-lg flex-shrink-0">
                                <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <h3 class="text-lg sm:text-xl font-bold text-indigo-950 sm:mb-3">Wspólne notatki</h3>
                        </div>
                        <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Edytuj notatki z innymi. Dodaj osobę i udostępnij link.</p>
                    </div>

                    <!-- Feature 2 -->
                    <div data-testid="feature-card-2" class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-slate-200/50 hover:border-indigo-200 hover:shadow-xl transition-all">
                        <div class="flex items-center gap-4 mb-4 sm:block">
                            <div class="w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-green-400 to-emerald-500 rounded-xl flex items-center justify-center sm:mb-6 shadow-lg flex-shrink-0">
                                <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                </svg>
                            </div>
                            <h3 class="text-lg sm:text-xl font-bold text-indigo-950 sm:mb-3">Bezpieczne i prywatne</h3>
                        </div>
                        <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Kontroluj dostęp do swoich notatek. Zmień widoczność w dowolnym momencie.</p>
                    </div>

                    <!-- Feature 3 -->
                    <div data-testid="feature-card-3" class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-slate-200/50 hover:border-indigo-200 hover:shadow-xl transition-all">
                        <div class="flex items-center gap-4 mb-4 sm:block">
                            <div class="w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-xl flex items-center justify-center sm:mb-6 shadow-lg flex-shrink-0">
                                <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                                </svg>
                            </div>
                            <h3 class="text-lg sm:text-xl font-bold text-indigo-950 sm:mb-3">Udostępnianie</h3>
                        </div>
                        <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Udostępnij anonimowy link notatki. Tylko osoby z linkiem widzą notatkę.</p>
                    </div>

                    <!-- Feature 4 -->
                    <div data-testid="feature-card-4" class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-slate-200/50 hover:border-indigo-200 hover:shadow-xl transition-all">
                        <div class="flex items-center gap-4 mb-4 sm:block">
                            <div class="w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-blue-400 to-cyan-500 rounded-xl flex items-center justify-center sm:mb-6 shadow-lg flex-shrink-0">
                                <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </div>
                            <h3 class="text-lg sm:text-xl font-bold text-indigo-950 sm:mb-3">Szybkie szukanie</h3>
                        </div>
                        <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Błyskawicznie znajdź to, czego potrzebujesz dzięki filtrom.</p>
                    </div>

                    <!-- Feature 5 -->
                    <div data-testid="feature-card-6" class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-slate-200/50 hover:border-indigo-200 hover:shadow-xl transition-all">
                        <div class="flex items-center gap-4 mb-4 sm:block">
                            <div class="w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-pink-400 to-rose-500 rounded-xl flex items-center justify-center sm:mb-6 shadow-lg flex-shrink-0">
                                <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-7.714 2.143L11 21l-2.286-6.857L1 12l7.714-2.143L11 3z" />
                                </svg>
                            </div>
                            <h3 class="text-lg sm:text-xl font-bold text-indigo-950 sm:mb-3">Piękny Markdown</h3>
                        </div>
                        <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Markdown, składnia kodu, listy kontrolne. Wszystko czego potrzebujesz.</p>
                    </div>


                    <!-- Feature 6 -->
                    <div data-testid="feature-card-1" class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-slate-200/50 hover:border-indigo-200 hover:shadow-xl transition-all">
                        <div class="flex items-center gap-4 mb-4 sm:block">
                            <div class="w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-xl flex items-center justify-center sm:mb-6 shadow-lg flex-shrink-0">
                                <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                                </svg>
                            </div>
                            <h3 class="text-lg sm:text-xl font-bold text-indigo-950 sm:mb-3">Błyskawicznie szybkie</h3>
                        </div>
                        <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Twórz notatki w mgnieniu oka. Żadnych opóźnień.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- How It Works -->
        <section class="py-12 sm:py-24">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12 sm:mb-16 space-y-4">
                    <h2 class="text-3xl sm:text-5xl font-bold text-indigo-950">Jak to działa?</h2>
                    <p class="text-lg sm:text-xl text-slate-600 max-w-2xl mx-auto">
                        Trzy proste kroki do lepszej organizacji notatek
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-8 sm:gap-12 relative">
                    <div class="hidden md:block absolute top-1/3 left-0 right-0 h-1 bg-gradient-to-r from-indigo-200 via-purple-200 to-cyan-200"></div>

                    <!-- Step 1 -->
                    <div class="relative flex flex-col items-center text-center space-y-4 sm:space-y-6">
                        <div class="relative w-20 h-24 sm:w-24 sm:h-24 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl flex items-center justify-center shadow-xl ring-8 ring-white">
                            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                            </svg>
                            <div class="absolute -top-3 -right-3 w-8 h-8 sm:w-10 sm:h-10 bg-indigo-500 rounded-full flex items-center justify-center text-white font-bold text-base sm:text-lg shadow-lg border-4 border-white">
                                1
                            </div>
                        </div>
                        <div class="space-y-2 sm:space-y-3">
                            <h3 class="text-xl sm:text-2xl font-bold text-indigo-950">Twórz notatki</h3>
                            <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Zapisuj pomysły w przejrzystym edytorze z Markdown</p>
                        </div>
                    </div>

                    <!-- Step 2 -->
                    <div class="relative flex flex-col items-center text-center space-y-4 sm:space-y-6">
                        <div class="relative w-20 h-24 sm:w-24 sm:h-24 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-xl ring-8 ring-white">
                            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                            </svg>
                            <div class="absolute -top-3 -right-3 w-8 h-8 sm:w-10 sm:h-10 bg-purple-500 rounded-full flex items-center justify-center text-white font-bold text-base sm:text-lg shadow-lg border-4 border-white">
                                2
                            </div>
                        </div>
                        <div class="space-y-2 sm:space-y-3">
                            <h3 class="text-xl sm:text-2xl font-bold text-indigo-950">Organizuj</h3>
                            <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Dodawaj tagi, edytuj i współdziel notatki</p>
                        </div>
                    </div>

                    <!-- Step 3 -->
                    <div class="relative flex flex-col items-center text-center space-y-4 sm:space-y-6">
                        <div class="relative w-20 h-24 sm:w-24 sm:h-24 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-xl ring-8 ring-white">
                            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                            </svg>
                            <div class="absolute -top-3 -right-3 w-8 h-8 sm:w-10 sm:h-10 bg-cyan-500 rounded-full flex items-center justify-center text-white font-bold text-base sm:text-lg shadow-lg border-4 border-white">
                                3
                            </div>
                        </div>
                        <div class="space-y-2 sm:space-y-3">
                            <h3 class="text-xl sm:text-2xl font-bold text-indigo-950">Udostępniaj</h3>
                            <p class="text-sm sm:text-base text-slate-600 leading-relaxed">Współpracuj z zespołem lub dziel się publicznie.</p>
                        </div>
                    </div>
                </div>

                <div class="mt-12 sm:mt-16 text-center">
                    <a href="/register" class="inline-flex items-center gap-2 px-6 sm:px-8 py-3 sm:py-4 btn-auth-primary rounded-2xl font-bold text-base sm:text-lg shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all">
                        Wypróbuj teraz za darmo
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-12 sm:py-24 ">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-indigo-500 via-purple-600 to-cyan-500 p-8 sm:p-16 shadow-2xl transform hover:scale-[1.01] transition-all">
                    <div class="relative text-center space-y-6 sm:space-y-8">
                        <h2 class="text-3xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight">
                            Gotowy na lepsze notatki?
                        </h2>
                        <p class="text-lg sm:text-xl sm:text-2xl text-indigo-50 max-w-2xl mx-auto leading-relaxed">
                            Zacznij ze Snipnote już dziś. Rozpocznij za darmo.
                        </p>

                        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-4">
                            <a href="/register" class="w-full sm:w-auto px-10 py-4 sm:py-5 btn-auth-primary rounded-2xl font-bold text-base sm:text-lg shadow-xl hover:shadow-2xl">
                                Załóż darmowe konto
                            </a>
                            <a href="/login" class="w-full sm:w-auto relative inline-flex items-center justify-center px-10 py-4 sm:py-5 bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white rounded-2xl font-bold text-base sm:text-lg hover:bg-white/20 text-center group transition-all duration-300">
                                <span class="relative">Mam już konto</span>
                            </a>
                        </div>

                        <div class="flex flex-wrap items-center justify-center gap-8 pt-8 text-white/90">
                            <div class="flex items-center gap-2 text-sm sm:text-base">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                                <span class="font-semibold">Bez karty kredytowej</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm sm:text-base">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                                <span class="font-semibold">Rejestracja w 30 sekund</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm sm:text-base">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                                <span class="font-semibold">Wszystkie notatki w jednym miejscu</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="relative border-t border-slate-200/50 bg-white/40 backdrop-blur-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
                <div class="grid md:grid-cols-4 gap-8 mb-8">
                    <div class="md:col-span-2 space-y-4">
                        {% include 'components/logo.html.twig' with { 'dataTestId': 'logo-footer-link' } %}
                        <p class="text-slate-600 max-w-md">
                            Najlepsze narzędzie do tworzenia, organizowania i udostępniania notatek.
                            Proste, szybkie i bezpieczne.
                        </p>
                <div class="pt-8 border-t border-slate-200/50 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-slate-600">
                    <p>&copy; {{ "now"|date("Y") }} Snipnote. Wszelkie prawa zastrzeżone.</p>
                </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
{% endblock %}