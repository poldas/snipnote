{#
  Universal Alert Component
  Props:
    - type: 'error' (rose/red) | 'success' (emerald/green) | 'warning' (amber/yellow) | 'info' (indigo/blue)
    - title: string (optional)
    - messages: array of strings
    - icon: raw html icon (optional)
    - class: extra classes (optional)
#}
{% set type = type ?? 'error' %}
{% set messages = messages ?? [] %}
{% set title = title ?? null %}
{% set icon = icon ?? null %}

{% if messages is not empty %}
    {% set config = {
        'error': {
            'bg': 'bg-red-50',
            'border': 'border-red-200',
            'text': 'text-red-700',
            'muted': 'text-red-600',
            'icon_color': 'text-red-500'
        },
        'success': {
            'bg': 'bg-emerald-50',
            'border': 'border-emerald-200',
            'text': 'text-emerald-700',
            'muted': 'text-emerald-600',
            'icon_color': 'text-emerald-500'
        },
        'warning': {
            'bg': 'bg-amber-50',
            'border': 'border-amber-200',
            'text': 'text-amber-900',
            'muted': 'text-amber-800',
            'icon_color': 'text-amber-500'
        },
        'info': {
            'bg': 'bg-indigo-50',
            'border': 'border-indigo-100',
            'text': 'text-indigo-900',
            'muted': 'text-indigo-800',
            'icon_color': 'text-indigo-500'
        }
    }[type] ?? config.error %}

    <div class="rounded-xl border {{ config.bg }} {{ config.border }} px-4 py-3 {{ class ?? '' }}" role="alert">
        <div class="flex items-start gap-3">
            {% if icon %}
                <div class="{{ config.icon_color }} mt-0.5">{{ icon|raw }}</div>
            {% else %}
                <div class="{{ config.icon_color }} mt-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        {% if type == 'success' %}
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        {% elseif type == 'warning' or type == 'error' %}
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        {% else %}
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        {% endif %}
                    </svg>
                </div>
            {% endif %}
            
            <div class="flex-1">
                {% if title %}
                    <p class="text-sm font-bold {{ config.text }} mb-1">{{ title }}</p>
                {% endif %}
                <div class="space-y-1 text-sm {{ config.muted }}">
                    {% for msg in messages %}
                        <p>{{ msg }}</p>
                    {% endfor %}
                </div>
            </div>
            {% if cta is defined and cta %}
                <div class="flex-shrink-0">
                    <a href="{{ cta.href }}" class="inline-flex items-center gap-2 rounded-lg border {{ config.border }} bg-white/70 px-3 py-1.5 text-xs sm:text-sm font-semibold {{ config.text }} hover:bg-white transition-colors">
                        {{ cta.label }}
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
