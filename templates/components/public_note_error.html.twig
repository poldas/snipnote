{% set isNotFound = errorCode == 403 or errorCode == 404 %}
{% set errorTitle = isNotFound ? 'Notatka niedostępna lub nieprawidłowy link' : 'Wystąpił nieoczekiwany błąd' %}
{% set errorDesc = isNotFound ? 'Sprawdź, czy adres URL jest poprawny lub zapytaj właściciela o nowy link.' : 'Nie udało się przetworzyć treści notatki. Spróbuj ponownie za chwilę.' %}

<div id="public-note-shell" class="pn-error">
    {% include 'components/empty_state.html.twig' with {
        title: errorTitle,
        description: errorDesc
    } %}
</div>

