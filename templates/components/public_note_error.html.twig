{% set icon = errorCode == 0 ? '锔' : (errorCode == 403 ? '' : '') %}
{% set errorTitle = errorCode == 403 ? 'Notatka niedostpna (prywatna)' : (errorCode == 404 ? 'Notatka niedostpna lub link nieprawidowy' : 'Problem z poczeniem') %}
{% set errorDesc = errorCode == 403 ? 'Waciciel ograniczy dostp do tej notatki.' : (errorCode == 404 ? 'Sprawd藕, czy adres URL jest poprawny lub zapytaj waciciela o nowy link.' : 'Nie udao si pobra danych. Spr贸buj ponownie za chwil.') %}

<div id="public-note-shell" class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
    <div class="flex items-start gap-4 px-6 py-6">
        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-indigo-50 text-indigo-700 text-xl">
            {{ icon }}
        </div>
        <div class="flex flex-col gap-2">
            <h2 class="text-xl font-semibold text-slate-900">{{ errorTitle }}</h2>
            <p class="text-slate-600">{{ errorDesc }}</p>
            <div class="mt-2 flex flex-wrap gap-3">
                {% if errorCode == 0 %}
                    <button
                        type="button"
                        hx-get="{{ app.request.pathinfo }}"
                        hx-target="#public-note-shell"
                        hx-swap="outerHTML"
                        class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
