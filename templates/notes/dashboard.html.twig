{% extends 'base.html.twig' %}

{% block title %}Twoje notatki | Snipnote{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #toast-stack {
            top: 102px; /* 100px header height + 2px gap */
        }
    </style>
{% endblock %}

{% block body %}
<main class="min-h-screen bg-gradient-to-br from-slate-50 via-indigo-50/30 to-purple-50/20" data-controller="notes-dashboard">
    <div aria-live="polite" class="sr-only" data-global-aria-live></div>
    <div id="toast-stack" aria-live="polite"></div>

    <!-- Header -->
    <header class="bg-white/80 backdrop-blur-lg border-b border-slate-200/60 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 py-3 sm:py-4">
            <!-- Mobile Layout -->
            <div class="flex flex-col gap-3 sm:hidden">
                <div class="flex items-center justify-between">
                    {% include 'components/logo.html.twig' %}
                    <button data-mobile-menu-toggle class="p-2 text-slate-600 hover:bg-slate-100 rounded-lg" aria-label="Menu">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

                <!-- Mobile Menu -->
                <div data-mobile-menu class="hidden bg-white border-t border-slate-200 pt-3">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-slate-600">{{ app.user.email ?? 'użytkownik' }}</span>
                        <form action="/logout" method="post" class="inline">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                            <button type="submit" class="text-sm font-semibold text-indigo-600 hover:text-indigo-700 transition-colors bg-transparent border-0 p-0 cursor-pointer">
                                Wyloguj
                            </button>
                        </form>
                    </div>
                </div>
                <button type="button"
                        hx-get="/notes/new"
                        hx-target="#main-content"
                        onclick="window.location.href='/notes/new'"
                        class="w-full inline-flex items-center justify-center gap-2 px-4 py-3 bg-white border-2 border-indigo-200 text-indigo-700 rounded-xl font-semibold shadow-sm hover:border-indigo-300 hover:bg-indigo-50 transition-all">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                    </svg>
                    Dodaj notatkę
                </button>
            </div>

            <!-- Desktop Layout -->
            <div class="hidden sm:flex items-center justify-between">
                 {% include 'components/logo.html.twig' %}
                <div class="flex items-center gap-4">
                    <button type="button"
                            hx-get="/notes/new"
                            hx-target="#main-content"
                            onclick="window.location.href='/notes/new'"
                            class="inline-flex items-center gap-2 px-5 py-2.5 bg-white border-2 border-indigo-200 text-indigo-700 rounded-xl font-semibold shadow-sm hover:border-indigo-300 hover:bg-indigo-50 hover:shadow-md transition-all">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                        </svg>
                        Dodaj notatkę
                    </button>
                    <span class="text-sm text-slate-600">{{ app.user.email ?? 'użytkownik' }}</span>
                    <form action="/logout" method="post" class="inline">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                        <button type="submit" class="text-sm font-semibold text-indigo-600 hover:text-indigo-700 transition-colors bg-transparent border-0 p-0 cursor-pointer">
                            Wyloguj
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-6 sm:py-8">
        <!-- Search Bar -->
        <div class="mb-6 sm:mb-8">
            {% include 'notes/components/topbar_search.html.twig' with {
                q: view.q,
                parsed: view.parsedQ,
                isLoading: view.isLoading,
                count: view.meta.total|default(0),
                visibility: view.visibility|default('')
            } %}
        </div>

        <!-- Filter Bar -->
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3 sm:gap-0 mb-6">
            <div class="flex items-center gap-2 self-end sm:self-auto">
                <span class="text-slate-600">Znalezionych notatek:</span>
                <span class="font-semibold text-slate-900">{{ view.meta.total|default(0) }}</span>
            </div>
        </div>

        <!-- Notes Gallery Grid -->
        {% set parsed = view.parsedQ ?? { labels: [], text: null } %}
        {% include 'notes/components/notes_panel.html.twig' with {
            notes: view.notes,
            meta: view.meta,
            q: view.q,
            labels: parsed.labels,
            visibility: view.visibility|default(''),
            error: view.error,
            isLoading: view.isLoading
        } %}
    </div>
</main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

