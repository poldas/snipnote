{#
  ConfirmModal Component
  Generic confirmation modal controlled via JS
#}
<div 
    id="confirm-modal" 
    class="hidden fixed inset-0 z-40 items-center justify-center bg-slate-900/50 backdrop-blur-sm"
    role="dialog"
    aria-modal="true"
    aria-labelledby="confirm-modal-title"
    aria-describedby="confirm-modal-description"
    data-confirm-modal
>
    <div class="max-w-md w-full rounded-2xl bg-white shadow-2xl border border-slate-200 p-6 space-y-4" data-modal-surface>
        <div class="space-y-1">
            <h3 id="confirm-modal-title" class="text-lg font-semibold text-slate-900" data-modal-title>Tytuł operacji</h3>
            <p id="confirm-modal-description" class="text-sm text-slate-600" data-modal-description></p>
        </div>
        <div class="flex items-center justify-end gap-3">
            <button type="button" data-modal-cancel class="inline-flex items-center justify-center rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-100 transition-colors">
                Anuluj
            </button>
            <button type="button" data-modal-confirm class="inline-flex items-center justify-center rounded-lg border border-red-200 bg-red-50 px-3 py-2 text-sm font-semibold text-red-700 hover:bg-red-100 transition-colors">
                <span data-modal-confirm-label>Potwierdź</span>
                <span data-modal-spinner class="ml-2 h-4 w-4 border-2 border-red-200 border-t-red-600 rounded-full animate-spin hidden"></span>
            </button>
        </div>
        <p class="text-sm text-red-600 hidden" data-modal-error></p>
    </div>
</div>


