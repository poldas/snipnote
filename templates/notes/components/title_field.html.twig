{#
  TitleField Component
  Text input field with label and character counter
  Max length: 255 characters
#}
<div data-field="title" class="group">
    <div class="flex items-center justify-between mb-3">
        <label for="note-title" class="block text-base font-bold text-gray-800">
            <span class="bg-gradient-to-r from-indigo-600 to-purple-600 text-transparent bg-clip-text">Tytuł</span>
            <span class="text-red-500 ml-1">*</span>
        </label>
        <span id="title-counter" data-title-counter class="text-sm text-gray-500 font-semibold" aria-live="polite">
            0 / 255
        </span>
    </div>
    <input type="text" id="note-title" name="title" data-title-input maxlength="255" required
           data-testid="note-title-input"
           tabindex="1"
           value="{{ initialTitle ?? '' }}"
           class="input-modern w-full px-6 py-4 border-2 border-indigo-200 rounded-2xl bg-white text-gray-900 placeholder-gray-400 shadow-md hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-indigo-300 focus:border-indigo-400 font-medium text-lg"
           placeholder="✨ Wpisz tytuł notatki...">
    <div id="title-error" data-title-error class="hidden mt-3 text-sm text-red-600 font-medium" role="alert">
        {# Error messages will be inserted here by JavaScript #}
    </div>
</div>

