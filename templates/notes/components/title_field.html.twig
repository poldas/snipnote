{#
  TitleField Component
  Text input field with label and character counter
  Max length: 255 characters
#}
<div>
    <div class="flex items-center justify-between mb-2">
        <label 
            for="note-title" 
            class="block text-sm font-semibold text-slate-700"
        >
            Tytuł <span class="text-red-500" aria-label="wymagane">*</span>
        </label>
        <span 
            id="title-counter" 
            data-title-counter
            class="text-xs text-slate-500"
            aria-live="polite"
        >
            0 / 255
        </span>
    </div>
    <input
        type="text"
        id="note-title"
        name="title"
        data-title-input
        maxlength="255"
        required
        aria-required="true"
        aria-describedby="title-error title-counter"
        aria-invalid="false"
        class="w-full px-4 py-3 border rounded-2xl bg-white text-slate-900 placeholder-slate-400 shadow-sm hover:shadow-md focus:shadow-md transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-300 border-slate-200/80 hover:border-slate-300"
        placeholder="Wpisz tytuł notatki..."
        value="{{ initialTitle ?? '' }}"
    >
    <div 
        id="title-error" 
        data-title-error
        class="hidden mt-2 text-sm text-red-600"
        role="alert"
    >
        {# Error messages will be inserted here by JavaScript #}
    </div>
</div>

