{#
  CopyContentButton Component
  Button to copy specific content (e.g. Markdown) to clipboard.
  Props: 
    - content (string): The text to be copied
    - label (string, optional): Button text
    - successMessage (string, optional)
    - class (string, optional)
#}
{% set buttonLabel = label ?? 'Kopiuj notatkę' %}
{% set buttonClass = class ?? 'inline-flex items-center gap-2 px-4 py-2 bg-white/60 border border-indigo-200 text-indigo-700 rounded-xl font-bold text-xs hover:bg-white hover:shadow-md hover:-translate-y-0.5 transition-all duration-300' %}

<button type="button"
        data-controller="copy"
        data-copy-content-value="{{ content }}"
        data-copy-success-message-value="{{ successMessage ?? 'Skopiowano treść Markdown' }}"
        data-action="click->copy#copy"
        class="{{ buttonClass }}"
        title="Kopiuj surową treść notatki">
    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
    </svg>
    <span>{{ buttonLabel }}</span>
</button>
