{#
  Notes Layout Component
  Common layout, styles and structure for notes pages (edit, new, dashboard)
  Props:
    - subtitle (string) - subtitle for the header
    - currentUserEmail (string) - email of current user
    - backUrl (string, optional) - URL for back button
    - showAddBtn (bool, optional) - show add note button
    - content (string) - HTML content to render
    - sticky_bar (string, optional) - HTML for bottom sticky bar
    - container_class (string, optional)
#}

<main class="relative min-h-screen pb-32 bg-gradient-to-br from-indigo-50 via-purple-50 to-cyan-50" data-controller="notes-dashboard">
    <div aria-live="polite" class="sr-only" data-global-aria-live></div>
    <div id="toast-stack" class="toast-stack" aria-live="polite"></div>

    <!-- Unified Header -->
    {% include 'notes/components/notes_nav.html.twig' with {
        subtitle: subtitle,
        backUrl: backUrl ?? null,
        showAddBtn: showAddBtn ?? false,
        currentUserEmail: currentUserEmail
    } %}

    <div class="{{ container_class ?? 'max-w-6xl mx-auto px-4 sm:px-6 py-6 sm:py-8 space-y-6' }}">
        {{ content|raw }}
    </div>

    {{ sticky_bar|default('')|raw }}
</main>
