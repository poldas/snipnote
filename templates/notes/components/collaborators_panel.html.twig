{#
  CollaboratorsPanel Component
  Props:
    - noteId (int)
    - items: list of { id?, email, isOwner, isSelf, userId?, removeUrl? }
    - isOwner (bool)
    - canEdit (bool)
    - addUrl (string)
    - redirectUrlOnSelfRemove (string)
    - currentUserEmail (string)
#}
<section class="bg-white/95 backdrop-blur-2xl rounded-2xl p-4 sm:p-6 border-2 border-indigo-200 shadow-xl border border-white/30" data-collaborators-panel data-note-id="{{ noteId }}" data-add-url="{{ addUrl }}" data-current-user-email="{{ currentUserEmail }}" data-owner-email="{{ items is not empty and items[0].isOwner ? items[0].email : '' }}" data-can-edit="{{ canEdit ? 'true' : 'false' }}">
    <div class="flex items-center justify-between gap-4 mb-5">
        <div>
            <h2 class="text-lg sm:text-xl font-bold text-gray-900 mb-1"> Wsp贸pracownicy</h2>
            <p class="text-xs sm:text-sm text-gray-600 font-medium">Osoby z dostpem do edycji tej notatki</p>
        </div>

    </div>

    <div data-collaborators-message class="hidden mb-6 p-4 rounded-xl border font-semibold text-sm animate-in fade-in slide-in-from-top-1 duration-300">
        <div class="flex items-center justify-between">
            <span data-collaborators-message-text></span>
            <button type="button" data-collaborators-message-close class="ml-4 text-current opacity-60 hover:opacity-100 transition-opacity">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
    </div>

    <form data-collaborator-add-form class="flex flex-col sm:flex-row gap-3 mb-6">
        <input type="email" id="collaborator-email" name="email" required 
               data-collaborator-email 
               data-testid="collaborator-email-input"
               tabindex="5"
               class="input-modern flex-1 px-4 sm:px-6 py-2.5 sm:py-3 border-2 border-indigo-200 rounded-xl bg-white text-gray-900 placeholder-gray-400 shadow-md hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-indigo-300 focus:border-indigo-400 font-medium text-sm sm:text-base" placeholder="email@przyklad.com">
        <button type="submit" data-collaborator-add 
                data-testid="collaborator-add-btn"
                tabindex="-1"
                class="btn-gradient px-6 py-2.5 sm:py-3 text-white rounded-xl font-bold shadow-md hover:shadow-xl transition-all text-sm sm:text-base min-w-[120px]">
            Dodaj
        </button>
    </form>

    <div class="bg-white/90 backdrop-blur-xl rounded-xl border border-indigo-100 divide-y divide-indigo-100 shadow-inner" data-collaborators-list>
        {% if items is empty %}
            <div class="px-4 sm:px-5 py-3 sm:py-4 text-xs sm:text-sm text-gray-500" data-collaborators-empty>Brak wsp贸pracownik贸w.</div>
        {% else %}
            {% for collaborator in items %}
                <div class="px-4 sm:px-5 py-3 sm:py-4 flex items-center justify-between gap-3" data-collaborator-row data-collaborator-id="{{ collaborator.id ?? 'owner' }}" data-collaborator-email="{{ collaborator.email|lower }}">
                    <div class="space-y-0.5 min-w-0">
                        <p class="font-bold text-gray-900 text-sm sm:text-base truncate">{{ collaborator.email }}</p>
                        <p class="text-xs sm:text-sm text-indigo-600 font-semibold">
                            {% if collaborator.isOwner %} Waciciel{% elseif collaborator.isSelf %} Ty{% else %} Wsp贸pracownik{% endif %}
                        </p>
                    </div>
                    {% if canEdit and not collaborator.isOwner %}
                        <div class="flex-shrink-0">
                            <button
                                type="button"
                                class="text-xs sm:text-sm text-red-600 hover:text-red-800 font-semibold"
                                data-remove-collaborator
                                data-remove-url="{{ collaborator.removeUrl }}"
                                {% if collaborator.isSelf %}data-self-remove="true"{% endif %}
                            >
                                {% if collaborator.isSelf %}<span class="hidden sm:inline">Usu m贸j dostp</span><span class="sm:hidden">Usu</span>{% else %}Usu{% endif %}
                            </button>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        {% endif %}
    </div>
</section>


