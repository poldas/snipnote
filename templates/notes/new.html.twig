{% extends 'layout_dashboard.html.twig' %}

{% block title %}Nowa notatka | Snipnote{% endblock %}

{% block body %}
    {% set layoutData = {
        subtitle: 'Nowa notatka',
        currentUserEmail: app.user.email ?? 'użytkownik',
        backUrl: '/notes'
    } %}

    {% set content %}
        <div class="bg-white border border-slate-200 rounded-3xl shadow-2xl overflow-hidden transform hover:scale-[1.01] transition-all duration-300">
            <div class="px-8 py-6 bg-gradient-to-r from-indigo-50 to-purple-50 border-b border-indigo-100/50">
                <h1 class="text-3xl font-black gradient-text">Utwórz nową notatkę</h1>
                <p class="mt-1 text-sm text-gray-600 font-medium">Wypełnij poniższy formularz, aby utworzyć nową notatkę.</p>
            </div>
            
            <div class="p-8">
                {% include 'notes/components/note_form.html.twig' with {
                    csrfToken: csrfToken,
                    initialVisibility: 'private'
                } %}
            </div>
        </div>
    {% endset %}

    {% set sticky_bar %}
        {% include 'notes/components/sticky_action_bar.html.twig' %}
    {% endset %}

        {% include 'notes/components/notes_layout.html.twig' with {

            content: content,

            sticky_bar: sticky_bar

        } + layoutData %}

    {% endblock %}

    